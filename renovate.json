{
  "extends": [
    "config:base",
    ":gitSignOff"
  ],
  "ignorePaths": [
    "prometheus/*",
    "keycloak/*"
  ],
  "helm-values": {
    "fileMatch": ["(^|/)values\\.yaml$"],
    "bumpVersion": "minor"
  },
  "packageRules": [
    {
      "packagePatterns": ["^k8s.io", "^sigs.k8s.io"],
      "enabled": false
    }
  ]
}
